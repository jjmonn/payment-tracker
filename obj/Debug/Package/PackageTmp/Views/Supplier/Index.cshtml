        @Html.DisplayFor(modelItem => item.Guichet)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.AccountNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BankKey)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BankAddress)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BIC)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IBAN)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.BankCountry)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PaymentDelay)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
    </td>
</tr>
    }

</table>
