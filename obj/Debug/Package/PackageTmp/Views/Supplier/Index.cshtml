@model IEnumerable<EcheancierDotNet.Models.Supplier>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "Supplier", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
