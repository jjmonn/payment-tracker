@section scripts {
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/home")
}


@{
    ViewBag.Title = "Home Page";
}

<h2>ALA France Invoices Tracker</h2>
<hr />


<div class="text-danger">
    @ViewBag.Alert
</div>
<div class="text-success">
    @ViewBag.Message
</div>

<div>
    <h3>Invoices marked to be Paid</h3>
    <p>Amount to be paid in EUR: <span data-bind="text: toBePaidEUR.formatted"></span>  - Bank total EUR amount:   €</p>
    <p>Amount to be paid in USD: <span data-bind="text: toBePaidUSD.formatted"></span>  - Bank total USD amount:  $</p>
    <p>Amount to be paid in GBP: <span data-bind="text: toBePaidGBP.formatted"></span>  - Bank GBP amount:  £</p>
</div>
<hr />

<div id="chart_div"></div>
<hr />



<div>
    <h3>Total invoices not paid excluding interco</h3>
    <p>Overdue EUR: <span data-bind="text: OverdueEUR.formatted"></span></p>
    <p>Overdue USD: <span data-bind="text: OverdueUSD.formatted"></span></p>
    <p>Overdue GBP: <span data-bind="text: OverdueGBP.formatted"></span></p>
</div>




