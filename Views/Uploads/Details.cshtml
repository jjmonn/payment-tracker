@model EcheancierDotNet.Models.Upload

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Upload</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UploadDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UploadDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Invoices)
        </dt>

        <dd>
            <table class="table" id="invoicesTable">
                <tr>
                    <th>Supplier</th>
                    <th>Currency</th>
                    <th>Invoice Reference</th>
                    <th>Due Date</th>
                    <th>Amount</th>
                    <th>Document Number</th>
                    <th>Document Header</th>
                </tr>
                @foreach (var item in Model.Invoices.Where(i => i.Paid == false).OrderBy(i => i.DueDate))
                {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Currency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentReference)
                </td>
                <td>
                    @item.DueDate.ToString("yyyy/MM/dd")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DocumentHeader)
                </td>
            </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.UploadID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
